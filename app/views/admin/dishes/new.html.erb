
<div class="">
  <%= render :partial => 'admin/shared/header'%>
  <div class="main_div">
    <!-- Sidebar -->
    <%= render :partial => 'admin/shared/side_bar'%>
    <!-- Sidebar -->

    <div id="page-content-wrapper">
      <div class="container-fluid"><br>
       
         <div class="edit_dish" >
    <%= form_for @dish, url: {action: :create}, html: {:class => 'u-dimension-2 new_dish',:style =>'padding:20px'} do |f| %>
      <h2 align="center"><%= @restaurant.name %></h2><hr>
     
      <div class="dish_field">
        <div class="col-sm-12 dish_column">    
          <label>Name </label>
          <span class="err"><%= @dish.errors[:name].join('. ') %></span><br/>
            <%= f.text_field :name , :class => 'form-control', :placeholder => 'Name'%>
        </div>
      </div>
       
      <div class="dish_field">
        <div class="col-sm-12 dish_column">    
          <label>Price </label>
           <span class="err"><%= @dish.errors[:price].join('. ') %></span><br/>
          <%= f.text_field :price, :class => 'form-control', :placeholder => 'Price'  %>
        </div>
      </div>
  
      <%= f.fields_for :pictures do |p| %>
      <div class="" align="center" style="display: none;" id="dish_image_column">
        <span class ="upload-preview">
            <a class=" " data-toggle="modal" data-target="#myModal" href="#">
              <img class="img_preview load_image" src="">
            </a>
            <!-- Modal for image view-->
            <div class="modal fade"  id="myModal" role="dialog">
              <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content modal-img-content">
                  <div class="modal-body">
                    <img class="modal-img" src="">
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
          </span>
      </div>
      <div class="col-md-12 res_new" id="dish_file_column">
         <%= f.label :image %> 
          <%= p.file_field :image, class: "form-control file"  %>
      </div>

      <% end %>

      <div class="dish_field">
        <div class="col-sm-12 dish_column">    
          <label>Category </label>
          <%= f.select( :category_id, options_from_collection_for_select(Category.all, "id", "name"), {:prompt => 'select category'}, {:class => 'form-control'}) %>   
        </div>
      </div>

      <div class= "" >
        <div class="col-sm-12">    
            <%= f.submit "Save",class: "btn btn-block btn-primary btn-md dish_new" %> 
        </div>
      </div><br>

      <div class= "" >
        <div class="col-sm-12" align="center">    
          <%= link_to 'Back to '+@restaurant.name,admin_restaurant_dishes_path,:class => "btn btn-sm btn-info "  %>
        </div>
      </div>

    <% end %>
  </div>
     
      </div>
    </div>
  </div>
</div>




<style>
  .edit_dish{
    width: 422px; margin: 0px auto;
  }
  @media only screen and (max-width: 600px) {
    .edit_dish{
      width: 310px;
    }

  .one, .two, .three, .four{
    display: none;
  }    
  .h1{
    font-size: 15px !important;
  }
}

</style>




  


