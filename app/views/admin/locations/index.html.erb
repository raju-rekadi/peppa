<div class="container-fluid" ><br>
	<h4 align="center">All locations</h4>
  <table  class="table " >   
    <thead class="thead-light">
      <tr> 
        <th>id</th>   
        <th>street</th> 
        <th>city</th>
        <th>state</th>
        <th>pincode</th> 
        <th>country</th>
        <th>latitude</th>
        <th>longitude</th>
        <th>Actions</th>
      </tr>   
    </thead>   
    <tbody>  
      <% @locations.each do|l|%>
        <tr>
          <td><%= l.id %></td>
          <td><%= l.street %></td>
          <td><%= l.city %></td>
          <td><%= l.state %></td>
          <td><%= l.pincode %></td>
          <td><%= l.country %></td>
          <td><%= l.latitude %></td>
          <td><%= l.longitude %></td>
          <td><%= link_to 'edit' , edit_admin_location_path(l), :class => 'btn btn-sm 
               btn-info' %>
              <%= link_to 'Delete', '#',{:class=>"btn btn-danger btn-sm", "data-toggle"=>"modal", "data-target" => "#delete-#{l.id}"} %>
              <div class="modal fade  " id="delete-<%= l.id %>">
                <div class="modal-dialog ">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h3>Restaurant Delete</h3>
                    </div>
                    <div class="modal-body">
                      <p>Are you sure to delete this Restaurant?</p>
                    </div>
                    <div class="modal-footer">
                      <%= link_to 'Delete',admin_location_path(l), method: :delete, :class => 'btn btn-danger btn-sm' %>
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                  </div>
                </div>
              </div>	
          </td>          
        </tr>
      <% end %>   
    </tbody>   
  </table>
  <p align="center"><%= link_to 'Back', admin_restaurants_path, :class => 'btn btn-sm btn-info'%></p> 
</div>  

